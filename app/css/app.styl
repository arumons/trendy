@import 'helpers'

// Main

body, html
  height 100%
  background-color: #95f8ff

li
  display inline
  font-size small

li a
  margin 0 5px

#header
  margin-left 10px
  margin-right 15px

#content
  margin-top 5px
  margin-bottom 10px
  margin-left 15px
  margin-right 15px
  padding-bottom 15px
  width 620px


#trends
  width 600px
  padding 10px
  background-color: white
  border-radius 10px

#tweets
  word-wrap break-word
  width 600px
  margin-top 10px
  padding 10px
  background-color: white
  border-radius 10px

.tweet
  clear both
  padding 10px
  border-bottom 1px solid #EBEBEB

.tweet_content
  margin-left: 58px

.tweet_name
  min-height 20px

.tweet_image
  float left
